<h4>PREFERENCES</h4>
<ul>
  <% @filters.each do |filter| %>
    <% if filter.id != nil %>
      <li><%= filter.id %> Preference: <%= filter.content %>
      <%= link_to "Edit Preference", edit_filter_path(filter), id: "edit-filter-#{filter.id}" %>
      <%= link_to "Delete Preference", filter_path(filter), method: :delete, data: {confirm: "Are you sure you want to delete this preference?"}, id: "delete-filter-#{filter.id}-action" %>
      </li>
    <% end %>
  <% end %>
</ul>


<%= form_for([@user, @filter]) do |f| %>
  <input id="new-filter-type" name="filter[type]" type="hidden" value="Size">
  <%= f.label "Size Preference" %>
  <%= f.text_field :content, id: "size-field" %>
  <%= f.submit "Submit Size Preference", id: 'size-submit-filters' %>
<% end %>

